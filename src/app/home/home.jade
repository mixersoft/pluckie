// home/home.jade
ion-view(view-title="{{vm.title}}" hide-back-button="true")
  ion-nav-bar.bar-positive
    ion-nav-buttons(side="primary")
      button.button.button-icon.icon.ion-navicon.back-button.flat(menu-toggle="primary")
  ion-content#home.has-header.dark-bg
    div.list.condensed-space.no-padding.animate-fade-slide-in-right(
      ng-init="colors=['', 'dark-bg','energized-bg','assertive-bg','balanced-bg','royal-bg']"
    )
      div.row.ng-repeat-grid.responsive-sm
        div.col.col-33(
          ng-repeat="item in vm.cards"
          )
          div.card.dark-bg
            a.item.item-bg-image.waves-effect.waves-button.waves-light.has-mask(
              class="{{item.color}}-bg"
              ui-sref="{{item.target}}"
              ) 
              div.has-mask-wrap(
                ng-class="item.layout"
                )
                h2 {{item.title}}
                p {{item.description}}
              img.hero.retro(ng-style="{{vm.imgAsBg(item.heroPic)}}")
    ion-infinite-scroll(on-infinite="vm.on.loadMore()" ng-if="vm.settings.loadMore")
